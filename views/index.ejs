    <!-- Hero Section -->
    <section class="relative bg-cover bg-center h-[85vh]" style="background-image: url('https://imgs.search.brave.com/C_vSLRPwzO0Iu3Zb1GeaPO1qzwZ9gEL3tcOLSnQytd8/rs:fit:500:0:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzL2MyL2Mx/LzE1L2MyYzExNThi/NWQyYjBkZTNlMzJm/Yjk4YzE2ZGI0ODQ5/LmpwZw');">
